{% extends "layout.njk" %}

{% block content %}
  <div class="card">
    <section class="avatar"></section>

    <section class="details">
      <h3>Detalhes</h3>

      <div class="item">
        <div>Professor</div>
        <div>{{teacher.name}}</div>
      </div>

      <div class="item">
        <div>Idade</div>
        <div>{{teacher.birth}}</div>
      </div>

      <div class="item">
        <div>Grau de escolaridade</div>
        <div>
          {% if teacher.formation == "high-school" %}
            Ensino MÃ©dio completo
          {% endif %}
          {% if teacher.formation == "college" %}
            Ensino Superior completo
          {% endif %}
          {% if teacher.formation == "master" %}
            Mestrado completo
          {% endif %}
          {% if teacher.formation == "doctor" %}
            Doutorado completo
          {% endif %}
        </div>
      </div>

      <div class="item">
        <div>Tipo de aula</div>
        <div>Presencial</div>
      </div>

      <div class="item">
        <div>
          Acompanhamento
          <div>
            {% for area in teacher.areas %}
              <span>{{area}}</span>
            {% endfor %}
          </div>
        </div>

      </div>

      <div class="item">
        <div>Desde</div>
        <div>{{teacher.created_at}}</div>
      </div>

    </div>
  </section>
</div>

{% endblock content %}